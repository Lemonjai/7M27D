<%= form_for @work do |f| %>
  
  <% if @work.errors.any? %>
    <h2><%= pluralize(@work.errors.count, "error") %> prevented this work from saving: </h2>
    <ul>
      <% @work.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %><br>
  <%= f.text_field :title %>

  <br>
  <br>
  
  <%= f.label :content, "Write your article here" %><br>
  <%= f.text_area :content %>

  <br>
  <br>

  <%= f.label :img, "Enter image url" %><br>
  <%= f.text_field :img %>

  <br>
  <br>

  <%= f.submit %>

<% end %>