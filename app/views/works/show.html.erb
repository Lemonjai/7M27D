<div class="clearfix"></div>
<div class="clearfix"></div>
<div class="clearfix"></div>

<div id="posts_wrapper" class="skinny_wrapper">
  <div class="post">
    <p class="date"><%= @work.created_at.strftime('%A, %B, %d') %></p>
    <h1><%= @work.title %></h1>
    <hr>
    <p><%= @work.img %></p>
  </div>

  <div id="content">
    <p><%= markdown @work.content %></p>
  </div>
  
  <div class="post">
    <hr>
  </div>

  <div id="share_box">
    <p>Share "<%= @work.title %>"</p>
    <a href="#"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="#"><i class="fa fa-google-plus"></i></a>
  </div>

  <%= link_to "Edit", edit_work_path(@work) %>
  <%= link_to "Delete", work_path(@work), method: :delete, data: {confirm: "Are you sure you wanted to delete this post?"} %>
</div>

