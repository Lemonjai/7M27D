<div class="clearfix"></div>
<h1 class="page_title">Stuff Written</h1>

<div id="posts_wrapper" class="skinny_wrapper">
  <% @blogs.each do |blog| %>
    <div class="post">
      <p class="date"><%= blog.created_at.strftime('%A, %B, %d') %></p>
      <h2><%= link_to blog.title, blog %></h2>
      <hr>
    </div>
  <% end %>
</div>

<%= will_paginate @blogs %>