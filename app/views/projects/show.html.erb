<div class="clearfix"></div>
<div class="clearfix"></div>
<div class="clearfix"></div>

<div id="posts_wrapper" class="skinny_wrapper">
  <div class="post">
    <p class="date"><%= @project.created_at.strftime('%A, %B, %d') %></p>
    <h1><%= @project.title %></h1>
    <hr>
    <p><%= @work.img %></p>
  </div>

  <div id="content">
    <p><%= markdown @project.content %></p>
  </div>
  
  <div class="post">
    <hr>
  </div>

  <div id="share_box">
    <p>Share "<%= @project.title %>"</p>
    <a href="#"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="#"><i class="fa fa-google-plus"></i></a>
  </div>

  <%= link_to "Edit", edit_project_path(@project) %>
  <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure you wanted to delete this post?"} %>
</div>

