<div class="clearfix"></div>
<div class="clearfix"></div>
<div class="clearfix"></div>

<div class="sidebar">
    <%= image_tag @project.img %>
</div> 

<div class="left-col">
  <h2><%= @project.title %></h2>
  <div class="post">
    <hr>
  </div>
  
  <p class="date"><%= @project.created_at.strftime('%A, %B, %d') %></p>
  <p><%= markdown @project.content %></p>
  <p class="date" ><%= link_to "Back", projects_path %></p>

  <div class="post">
    <hr>
  </div>

  <div id="share_box">
    <p>Share "<%= @project.title %>"</p>
    <a href="#"><i class="fa fa-twitter"></i></a>
    <a href="#"><i class="fa fa-facebook"></i></a>
    <a href="#"><i class="fa fa-google-plus"></i></a>
  </div>

  <% if user_signed_in? %>
    <%= link_to "Edit", edit_project_path(@project) %>
    <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: "Are you sure you wanted to delete this post?"} %>
  <% end %>

</div>

<div class="clearfix"></div>

